<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent">

        android:background="@drawable/update_btn_b

        <Button
            android:id="@+id/start_test_activity_btn_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="test game"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/square_0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>

            <Button
                android:id="@+id/square_1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:backgroundTint="@color/bootstrap_alert_cross_default"
                android:text=" "></Button>

            <Button
                android:id="@+id/square_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/bootstrap_alert_cross_default"
                android:text=" "></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/square_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
            <Button
                android:id="@+id/square_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
            <Button
                android:id="@+id/square_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/square_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
            <Button
                android:id="@+id/square_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
            <Button
                android:id="@+id/square_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=" "
                android:backgroundTint="@color/bootstrap_alert_cross_default">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/game_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">



        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
